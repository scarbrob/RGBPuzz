{
  "name": "rgbpuzz",
  "version": "0.1.0",
  "private": true,
  "description": "Daily color-sorting puzzle game",
  "workspaces": [
    "frontend",
    "api",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=api && npm install --workspace=shared",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:api": "npm run start --workspace=api",
    "build:frontend": "npm run build --workspace=frontend",
    "build:api": "npm run build --workspace=api",
    "test": "npm run test --workspaces"
  },
  "keywords": [
    "puzzle",
    "game",
    "colors",
    "rgb"
  ],
  "author": "",
  "license": "ISC"
}
